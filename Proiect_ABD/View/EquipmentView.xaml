<Page x:Class="Proiect_ABD.View.EquipmentView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proiect_ABD.View"
      xmlns:vm="clr-namespace:Proiect_ABD.View_Model"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EquipmentView">

    <Page.DataContext>
        <vm:EquipmentViewModel />
    </Page.DataContext>

    <Grid>
        <DockPanel>
            <!-- Header-ul -->
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,0">
                    <TextBlock Text="Id" FontWeight="Bold" TextAlignment="Center" />
                </Border>
                <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,0">
                    <TextBlock Text="Name" FontWeight="Bold" TextAlignment="Center" />
                </Border>
                <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0,0,1,0">
                    <TextBlock Text="Status" FontWeight="Bold" TextAlignment="Center" />
                </Border>
                <Border Grid.Column="3">
                    <TextBlock Text="Last Update" FontWeight="Bold" TextAlignment="Center" />
                </Border>
            </Grid>

            <!-- ListBox-ul -->
            <ListBox ItemsSource="{Binding EquipmentList}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>

                            <!-- Id -->
                            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,0">
                                <TextBlock Text="{Binding Id}" VerticalAlignment="Center" TextAlignment="Center" Margin="5,0" />
                            </Border>

                            <!-- Name (Editable) -->
                            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,0">
                                <TextBox Text="{Binding Name}" VerticalAlignment="Center" TextAlignment="Center" Margin="5,0" />
                            </Border>

                            <!-- Status (Editable) -->
                            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0,0,1,0">
                                <TextBox Text="{Binding Status}" VerticalAlignment="Center" TextAlignment="Center" Margin="5,0" />
                            </Border>

                            <!-- Last Update -->
                            <Border Grid.Column="3">
                                <TextBlock Text="{Binding LastUpdate}" VerticalAlignment="Center" TextAlignment="Center" Margin="5,0" />
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
        <Button Content="Save" Command="{Binding SaveCommand}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" />
    </Grid>
</Page>
