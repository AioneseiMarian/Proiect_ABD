<Window x:Class="Proiect_ABD.View.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Proiect_ABD.View_Model"
        Title="Dashboard" Height="600" Width="900"
        WindowState="Maximized" >


    <DockPanel>
        <!-- Sectiunea de butoane in partea stanga -->
        <Border DockPanel.Dock="Left" Background="#F0F0F0" Width="200">
            <StackPanel Margin="10">
                <Button Content="Echipamente" Command="{Binding NavigateCommand}" CommandParameter="EquipmentView" Margin="0,5,0,5" />

                <Button Content="Mentenanță" Command="{Binding NavigateCommand}" CommandParameter="MaintenanceView" Margin="0,5,0,5"
                        Visibility="{Binding CanViewMaintenance, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <Button Content="Gestionare Utilizatori" 
                        Command="{Binding NavigateCommand}" 
                        CommandParameter="ManageUsersView" 
                        Margin="0,5,0,5" 
                        Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}" />

                <Button Content="Deconectare" Command="{Binding LogoutCommand}" Margin="0,5,0,5" />
            </StackPanel>
        </Border>

        <!-- Sectiunea principala cu echipamente -->
        <ScrollViewer DockPanel.Dock="Right">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="31*"/>
                    <RowDefinition Height="42*"/>
                </Grid.RowDefinitions>
                <Frame x:Name="MainFrame" Content="{Binding CurrentView}" NavigationUIVisibility="Hidden" Grid.RowSpan="2" />

            </Grid>
        </ScrollViewer>
    </DockPanel>


</Window>
