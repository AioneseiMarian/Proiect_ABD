<Window x:Class="Proiect_ABD.View.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Proiect_ABD.View_Model"
        Title="Dashboard" Height="600" Width="900">
    <Window.DataContext>
        <vm:DashboardViewModel />
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Echipamente" Command="{Binding NavigateCommand}" CommandParameter="EquipmentView" />
            <MenuItem Header="Rapoarte" Command="{Binding NavigateCommand}" CommandParameter="ReportsView" />
            <MenuItem Header="Mentenanță" Command="{Binding NavigateCommand}" CommandParameter="MaintenanceView" />
            <MenuItem Header="Deconectare" Command="{Binding LogoutCommand}" />
        </Menu>
    </DockPanel>
</Window>
