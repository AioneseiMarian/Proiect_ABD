<Page x:Class="Proiect_ABD.View.ManageUsersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proiect_ABD.View"
      xmlns:vm="clr-namespace:Proiect_ABD.View_Model"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageUsersView"
      Width="Auto" Height="Auto">

    <Page.DataContext>
        <vm:ManageUsersViewModel />
    </Page.DataContext>

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- List -->
            <RowDefinition Height="Auto"/>
            <!-- Footer Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,0">
                <TextBlock Text="Id" FontWeight="Bold" TextAlignment="Center" Padding="5" />
            </Border>
            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,0">
                <TextBlock Text="Name" FontWeight="Bold" TextAlignment="Center" Padding="5" />
            </Border>
            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0,0,1,0">
                <TextBlock Text="Role" FontWeight="Bold" TextAlignment="Center" Padding="5" />
            </Border>
        </Grid>

        <!-- Scrollable List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <ListBox ItemsSource="{Binding UsersList}" HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Id -->
                            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,0">
                                <TextBlock Text="{Binding Id}" VerticalAlignment="Center" TextAlignment="Center" Margin="5,0" />
                            </Border>

                            <!-- Name (Editable) -->
                            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,0">
                                <TextBox Text="{Binding Name}" VerticalAlignment="Center" TextAlignment="Center" Margin="5,0" />
                            </Border>

                            <!-- Role (ComboBox) -->
                            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="0,0,1,0">
                                <ComboBox 
                                    ItemsSource="{Binding DataContext.RolesList, RelativeSource={RelativeSource AncestorType=Page}}"
                                    DisplayMemberPath="Name"
                                    SelectedItem="{Binding Role, Mode=TwoWay}" 
                                    VerticalAlignment="Center" 
                                    Margin="5,0">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" TextAlignment="Center" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Border>

                            <!-- Change Password -->
                            <Border Grid.Column="3" BorderBrush="Black" BorderThickness="0,0,1,0">
                                <Button Content="Change Password" Command="{Binding ChangePasswordCommand}" Margin="5" />
                            </Border>

                            <!-- Delete User -->
                            <Border Grid.Column="4" BorderBrush="Black" BorderThickness="0,0,1,0">
                                <Button Content="Delete User" Command="{Binding DeleteUserCommand}" Margin="5" />
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Add User" Command="{Binding AddUserCommand}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" />
            <Button Content="Save" Command="{Binding SaveCommand}" Margin="5" />
        </StackPanel>
    </Grid>
</Page>